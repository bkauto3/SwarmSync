{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@agent-market/sdk": ["../../packages/sdk/src"],
      "@pricing/*": ["../../lib/pricing/*"]
    },
    "types": ["@types/node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "trigger.config.ts"
  ],
  "exclude": ["node_modules", "src/trigger"]
}
